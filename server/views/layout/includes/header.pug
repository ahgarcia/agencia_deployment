header
    .navegacion
        .container
            .row.justify-content-between.align-items-center.py-2.py-md-3
                //- Logo: Ocupa todo el ancho en móvil, parte en tablets y laptops
                .col-12.col-sm-4.col-md-3.col-lg-3.text-center.text-sm-start.mb-2.mb-sm-0
                    a(href="/", aria-label="Inicio")
                        img(src="/img/logo.svg", alt="Logo Agencia de Viajes", class="img-fluid logo")

                //- Navegación: Con menú hamburguesa en móvil
                .col-12.col-sm-8.col-md-9.col-lg-9.d-flex.justify-content-end.align-items-center
                    //- Botón hamburguesa (solo visible en móvil)
                    button.navbar-toggler.d-sm-none(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon

                    //- Menú de navegación
                    #navbarNav.collapse.navbar-collapse.d-sm-block
                        nav.nav.justify-content-center.justify-content-sm-end(role="navigation" aria-label="Menú principal")
                            a.nav-link(href="/nosotros" class=(ruta==='/nosotros' ? 'active' : '')) Nosotros
                            a.nav-link(href="/viajes" class=(ruta==='/viajes' ? 'active' : '')) Viajes
                            a.nav-link(href="/blog" class=(ruta.startsWith('/blog') ? 'active' : '')) Blog
                            a.nav-link(href="/testimoniales" class=(ruta==='/testimoniales' ? 'active' : '')) Testimoniales