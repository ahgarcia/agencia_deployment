extends ../layout/index

block slider
    .slider(role="banner" aria-label="Portada")
        .slider__content.container
            em.aventura aventura
            h1.hero__title Escápate con nosotros
            p.lead.hero__subtitle Experiencias auténticas, planificación profesional y atención 24/7.
            .d-flex.flex-wrap.mt-3
                a.btn.btn-success.btn-lg(href="#viajes" aria-label="Ver próximos viajes") Ver próximos viajes
                a.btn.btn-outline-light.btn-lg.ml-3(href="/nosotros" aria-label="Cotiza tu viaje") Cotiza tu viaje
            a.slider__scroll(href="#sobre-nosotros" aria-label="Sigue bajando")
                i.fas.fa-chevron-down(aria-hidden="true")

block contenido
    main.container.mt-5
        h2#sobre-nosotros.text-center.mb-5 Sobre Nosotros
        .row.align-items-center
            .col-md-6
                p Más que una agencia, somos creadores de experiencias memorables. Diseñamos viajes a la medida para que disfrutes sin preocuparte por nada.
                p Te acompañamos de principio a fin: asesoría experta, itinerarios inteligentes y soporte continuo. Viajar no es solo visitar lugares, es crear recuerdos que duran para siempre.
                ul.beneficios.list-unstyled.mt-3
                    li
                        i.fas.fa-compass(aria-hidden="true")
                        |  Asesoría personalizada
                    li
                        i.fas.fa-plane-departure(aria-hidden="true")
                        |  Mejores rutas y horarios
                    li
                        i.fas.fa-concierge-bell(aria-hidden="true")
                        |  Soporte 24/7
                    li
                        i.fas.fa-shield-alt(aria-hidden="true")
                        |  Reservas seguras
                a.btn.btn-success.mt-3(href="/nosotros" aria-label="Conócenos") Conócenos
            .col-md-6
                img(src="/img/inicio_nosotros.jpg", class="img-fluid rounded-lg", alt="Terraza frente al mar con vista al océano")

        h2#viajes.text-center.my-5 Próximos Viajes
        include ../layout/partials/viajes

    if viajeDescuento
        .descuento
            .container
                .row
                    .col-md-6
                        .contenido
                            h3 #{viajeDescuento.descuento_porcentaje}% de Descuento
                            p.titulo= viajeDescuento.titulo
                            p.fecha #{new Date(viajeDescuento.fecha_ida).toLocaleDateString('es-MX', { day: 'numeric', month: 'long', year: 'numeric' })} - #{new Date(viajeDescuento.fecha_vuelta).toLocaleDateString('es-MX', { day: 'numeric', month: 'long', year: 'numeric' })}
                            p.precio= viajeDescuento.precio
                            p ¡Ahorra #{viajeDescuento.descuento_porcentaje}%!
                            a.btn.btn-success.btn-lg(href=`/viajes/${viajeDescuento.id}` aria-label=`Ver detalles de ${viajeDescuento.titulo}`) Ver Detalles

    if otrosDescuentos && otrosDescuentos.length > 0
        .container.my-5
            p.text-center.text-muted.mb-4 También en oferta:
            .row
                each viaje in otrosDescuentos
                    .col-md-4.mb-3
                        .card.border-success.h-100
                            .card-body.text-center
                                span.badge.badge-success.mb-2.p-2(style="font-size: 1rem;") #{viaje.descuento_porcentaje}% OFF
                                h5.card-title.font-weight-bold= viaje.titulo
                                p.text-muted.small #{new Date(viaje.fecha_ida).toLocaleDateString('es-MX', { day: 'numeric', month: 'short' })} - #{new Date(viaje.fecha_vuelta).toLocaleDateString('es-MX', { day: 'numeric', month: 'short', year: 'numeric' })}
                                p.card-text.h5.text-success= viaje.precio
                                a.btn.btn-outline-success.btn-sm(href=`/viajes/${viaje.id}` aria-label=`Ver más sobre ${viaje.titulo}`) Ver más

    .container
        h2.text-center.my-5 Testimoniales
        include ../layout/partials/testimoniales