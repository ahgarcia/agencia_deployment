extends layout/index

block contenido
    main.container.mt-5.mb-5
        .row.justify-content-center
            .col-md-8.text-center
                .error-container
                    if status === 404
                        i.fas.fa-map-marked-alt.fa-5x.mb-4.text-muted
                        h1.display-1 404
                        h2.mb-3 Página No Encontrada
                        p.lead Lo sentimos, la página que buscas no existe.
                    else
                        i.fas.fa-exclamation-triangle.fa-5x.mb-4.text-danger
                        h1.display-1= status || 500
                        h2.mb-3 ¡Oops! Algo salió mal
                        p.lead= message || 'Ha ocurrido un error en el servidor'

                    .mt-4
                        a.btn.btn-primary.btn-lg(href='/')
                            i.fas.fa-home.mr-2
                            | Volver al Inicio

                    if error && error.stack
                        .mt-5.text-left
                            .card.bg-light
                                .card-body
                                    h5.card-title Detalles del Error (Modo Desarrollo)
                                    pre.text-danger.small= error.stack
